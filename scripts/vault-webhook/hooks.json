[
  {
    "id": "vault-sync",
    "execute-command": "/config/sync.sh",
    "command-working-directory": "/vault",
    "execute-in-background": true,
    "response-message": "vault sync triggered",
    "trigger-rule": {
      "and": [
        {
          "match": {
            "type": "payload-hmac-sha256",
            "secret": "GITHUB_WEBHOOK_SECRET_PLACEHOLDER",
            "parameter": {
              "source": "header",
              "name": "X-Hub-Signature-256"
            }
          }
        },
        {
          "match": {
            "type": "value",
            "value": "refs/heads/main",
            "parameter": {
              "source": "payload",
              "name": "ref"
            }
          }
        }
      ]
    }
  }
]
